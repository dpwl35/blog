{
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss"
  ],
  "rules": {
    "alpha-value-notation": "number",
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["include", "mixin", "at-root", "extend", "if", "else", "for", "each", "use", "forward", "function", "return"]
    }],
    "scss/at-rule-no-unknown": true,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",
      "display",
      "flex",
      "flex-direction",
      "flex-wrap",
      "justify-content",
      "align-items",
      "align-content",
      "order",
      "flex-grow",
      "flex-shrink",
      "flex-basis",
      "width",
      "height",
      "min-width",
      "min-height",
      "max-width",
      "max-height",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "overflow",
      "overflow-x",
      "overflow-y",
      "color",
      "font",
      "font-family",
      "font-size",
      "font-weight",
      "line-height",
      "text-align",
      "text-decoration",
      "text-transform",
      "background",
      "background-color",
      "background-image",
      "background-position",
      "background-size",
      "border",
      "border-width",
      "border-style",
      "border-color",
      "border-radius",
      "box-shadow",
      "opacity",
      "transition",
      "transform"
    ]
  }
}