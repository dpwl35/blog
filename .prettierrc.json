{
  "plugins": ["prettier-plugin-organize-attributes"],
  "attributeGroups": [
    "^required$",
    "^type$",
    "^id$",
    "^class$",
    "^name$",
    "^(src|href)$",
    "^target$",
    "^for$",
    "^(title|alt)$",
    "^(data-|aria-)",
    "^maxlength$",
    "^(value|placeholder)$",
    "^tabindex$",
    "^role$",
    "^(checked|selected|readonly|disabled)$",
    "^style$",
    "^on",
    "$DEFAULT"
  ],
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 2,
  "semi": true,
  "printWidth": 100
}
